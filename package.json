{
  "name": "blink",
  "version": "0.0.1",
  "main": "server/server.js",
  "scripts": {
    "ansible:pull": "ansible-galaxy install -r provisioning/ansible/requirements.https.yml -p provisioning/ansible/roles",
    "ansible:provision": "ansible-playbook -i provisioning/ansible/hosts/staging provisioning/ansible/provision.yml",
    "ansible:deploy": "ansible-playbook -i provisioning/ansible/hosts/staging provisioning/ansible/deploy.yml -e app_version=$npm_package_version",
    "fast-deploy": "ssh appli@sg-m4-edge \"fast-deploy --app-name=blink --repository=$(git remote get-url origin)\"",
    "package": "npm install; npm run client:build",
    "package-push": "docker-compose exec package-push ./opt/app-packager/package-and-push.sh --rpm-name=blink --version=$npm_package_version --repository=$(git remote get-url origin)",
    "postdeploy": "echo \"Put here a command to be called during the deployment, like the database migration\"",
    "start": "node .",
    "posttest": "npm run lint && nsp check",
    "client:build": "webpack --config client/webpack/webpack.config.js",
    "client:watch": "webpack-dev-server --config client/webpack/webpack.config.dev.js --hot",
    "client:lint": "eslint --ext .jsx,.js -c client/.eslintrc client/source",
    "client:test": "NODE_ENV=test jest",
    "client:test:watch": "NODE_ENV=test jest --watch",
    "e2e": "nightwatch",
    "lint": "npm run client:lint && npm run server:lint",
    "pree2e": "sh ./test/e2e/nightwatch.sh",
    "test": "npm run client:test && npm run server:test:coverage",
    "postinstall": "npm run client:build",
    "server:watch": "nodemon --inspect server/server.js --ignore client/",
    "server:test": "mocha --compilers js:babel-core/register 'server/**/{*,}test.js'",
    "server:test:coverage": "nyc node_modules/.bin/babel-istanbul cover node_modules/.bin/_mocha -- 'server/**/{*,}test.js'",
    "server:lint": "eslint -c server/.eslintrc server"
  },
  "dependencies": {
    "compression": "1.6.2",
    "cors": "2.5.2",
    "counterpart": "0.17.5",
    "debug": "2.4.5",
    "flexboxgrid": "6.3.1",
    "healthcheck-fastit": "git+ssh://git@github.com:fastit/health-check.git#1.0.1",
    "helmet": "1.3.0",
    "js-cookie": "2.1.3",
    "loopback": "3.27.0",
    "loopback-boot": "2.23.0",
    "loopback-component-explorer": "2.4.0",
    "material-ui": "0.17.0",
    "moment": "2.15.0",
    "react": "15.3.1",
    "react-dom": "15.3.1",
    "react-interpolate-component": "0.10.0",
    "react-redux": "4.4.5",
    "react-router": "2.8.1",
    "react-router-redux": "4.0.5",
    "react-tap-event-plugin": "1.0.0",
    "react-translate-component": "0.13.1",
    "redux": "3.6.0",
    "redux-localstorage": "1.0.0-rc4",
    "redux-localstorage-filter": "0.1.1",
    "redux-thunk": "2.1.0",
    "serve-favicon": "2.0.1",
    "strong-error-handler": "1.0.1",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "babel": "6.23.0",
    "babel-cli": "6.24.0",
    "babel-core": "6.24.0",
    "babel-eslint": "7.1.1",
    "babel-istanbul": "0.12.2",
    "babel-jest": "19.0.0",
    "babel-loader": "6.4.0",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.24.0",
    "babel-preset-react": "6.23.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-0": "6.22.0",
    "chai": "3.5.0",
    "chromedriver": "2.28.0",
    "clean-webpack-plugin": "0.1.16",
    "cookie-parser": "1.4.3",
    "css-loader": "0.27.2",
    "csurf": "1.9.0",
    "enzyme": "2.7.1",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "14.1.0",
    "eslint-config-walmart": "1.2.2",
    "eslint-loader": "1.6.3",
    "eslint-plugin-filenames": "1.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "3.0.2",
    "eslint-plugin-react": "6.10.0",
    "expect": "1.20.2",
    "extract-text-webpack-plugin": "1.0.1",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "0.10.1",
    "html-webpack-plugin": "2.28.0",
    "istanbul": "0.4.5",
    "jest": "19.0.2",
    "jest-css-modules": "1.1.0",
    "jsdom": "9.12.0",
    "jsdom-global": "2.1.1",
    "jshint": "2.9.4",
    "json-loader": "0.5.4",
    "mocha": "3.2.0",
    "nightwatch": "0.9.13",
    "nock": "9.0.9",
    "nodemon": "1.11.0",
    "nsp": "2.6.3",
    "nyc": "10.1.2",
    "react-addons-test-utils": "15.2.0",
    "react-hot-loader": "3.0.0-beta.6",
    "react-tools": "0.13.3",
    "redux-mock-store": "1.2.2",
    "selenium-server-standalone-jar": "3.0.1",
    "sinon": "2.0.0",
    "style-loader": "0.13.2",
    "supertest": "3.0.0",
    "url-loader": "0.5.8",
    "webpack": "1.13.2",
    "webpack-dev-server": "1.16.1"
  },
  "engines": {
    "node": ">= 6.2"
  },
  "jest": {
    "rootDir": "./client/source",
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/CSSStub.js"
    },
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/../../coverage",
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/../../node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ]
  }
}
